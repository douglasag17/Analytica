<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:isScrollContainer="true">
            <Button
                android:layout_margin="8dp"
                android:id="@+id/buttonNewton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:background="@drawable/bk_boton_plano"
                android:stateListAnimator="@null"
                android:text="Divided Differences" />

            <Button
                android:layout_margin="8dp"
                android:id="@+id/buttonLagrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bk_boton_plano"
                android:stateListAnimator="@null"
                android:text="Lagrange"
                android:textColor="@android:color/white"/>
            <Button
                android:layout_margin="8dp"
                android:id="@+id/buttonLinearSpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:background="@drawable/bk_boton_plano"
                android:stateListAnimator="@null"
                android:text="Linear Spline" />
            <Button
                android:layout_margin="8dp"
                android:id="@+id/buttonCuadraticSpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:background="@drawable/bk_boton_plano"
                android:stateListAnimator="@null"
                android:text="Quadratic Spline" />
            <Button
                android:layout_margin="8dp"
                android:id="@+id/buttonCubicSpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:background="@drawable/bk_boton_plano"
                android:stateListAnimator="@null"
                android:text="Cubic Spline" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
