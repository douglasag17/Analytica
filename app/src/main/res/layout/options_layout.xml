<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:isScrollContainer="true">
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonIncrementales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Incremental search" />

        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonBiseccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Bisection"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonReglaFalsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="False rule" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonPuntoFijo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="fixed point" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonNewton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Newton" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonSecante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Secant" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonRaicez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Multiple roots" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonAitken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Aitken" />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/buttonSteffensen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="Steffensen" />
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
