<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_marginTop="100dp"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_marginTop="100dp"
        android:layout_gravity="right"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginTop="100dp"
        android:layout_gravity="top|center"
        android:textSize="30dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="vertical">
        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:context="com.androidplot.demos.matrix2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TableLayout
                    android:id="@+id/Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp">
                    <TableRow>
                        <Button
                            android:id="@+id/AÃ±adirRow"
                            android:layout_width="@dimen/Button_Size"
                            android:layout_height="@dimen/Button_Size"
                            android:layout_column="1"
                            android:onClick="addRow"
                            android:text="+"
                            android:textAlignment="4"
                            android:textColor="@color/colorPrimaryDark"
                            android:background="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TableLayout
                            android:id="@+id/MatrixAC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2">
                        </TableLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="3"
                            android:text="."
                            android:textAlignment="center"
                            android:textSize="60sp" />
                    </TableRow>

                    <TableRow>
                        <Button
                            android:id="@+id/QuitRow"
                            android:layout_width="@dimen/Button_Size"
                            android:layout_height="@dimen/Button_Size"
                            android:layout_column="3"
                            android:onClick="quitRow"
                            android:text="x"
                            android:textAlignment="4"
                            android:textColor="@color/colorPrimaryDark"
                            android:background="@color/white"/>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/VectorB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="31dp">
                </TableLayout>

                <TextView
                    android:id="@+id/matrixAEqual"
                    android:layout_width="24dp"
                    android:layout_height="38dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="50dp"
                    android:text="="
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="25dp" />

                <TableLayout
                    android:id="@+id/VectorX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="31dp"
                    android:background="@color/colorPrimary">
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom">

        <Button
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:id="@+id/matrix_LU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.788"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.774" />
    </LinearLayout>
</FrameLayout>